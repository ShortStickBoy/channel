<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warn_mine"
        android:textColor="@color/C333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_head_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/warn_into"
        android:textColor="@color/C999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/mine_head_name"
        app:layout_constraintStart_toEndOf="@id/mine_head_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_head_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/ctx_mine_head_edit"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingEnd="12dp"
        android:paddingBottom="4dp"
        android:text="@string/warn_edit"
        android:textColor="@color/CE22629"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/mine_head_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>